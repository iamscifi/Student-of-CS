def currencyAmount(amount, currency = "USD"): 
    if currency == "JPY":
        return "¥" + str(amount)
    elif currency == "USD":
        return "$" + str(amount)
    elif currency == "GBP":
        return "£" + str(amount)
    else:
        return str(amount)

print(currencyAmount(5))   
print(currencyAmount(5, currency = "GBP"))  
